@model RestaurantEntity.Restaurant

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Restaurant</h2>
@using (Html.BeginForm("Update", "Restaurant", FormMethod.Post))
{
    <table>
        <tr>
            <td>
                @Html.DisplayNameFor(Model => Model.Id)
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.Id)
                @Html.ValidationMessageFor(model => model.Id, "", new { @style = "color:red" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(Model => Model.Name)
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.Name)
                @Html.ValidationMessageFor(model => model.Name, "", new { @style = "color:red" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(Model => Model.Description)
            </td>
            <td>
                @Html.TextBoxFor(Model => Model.Description)
                @Html.ValidationMessageFor(model => model.Description, "", new { @style = "color:red" })
            </td>
        </tr>
        <tr>

            <td>@Html.ActionLink("Back to List", "Index")</td>
        </tr>
        <tr>
            <td>
                <input type="submit" />
            </td>
        </tr>
    </table>

}

